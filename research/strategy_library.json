      "id": "rsi2_mean_reversion",
      "name": "RSI-2 Mean Reversion",
      "category": "mean_reversion",
      "asset_class": ["stocks", "etf"],
      "timeframe": "daily",
      "entry_rules": [
        "RSI(2) < 10 (extremely oversold)",
        "Price > SMA(200) (long-term uptrend filter)"
      ],
      "exit_rules": [
        "RSI(2) > 90 (overbought)",
        "Price > SMA(5) (price recovered)",
        "Stop loss at 3%"
      ],
      "parameters": {
        "rsi_period": 2,
        "oversold_threshold": 10,
        "overbought_threshold": 90,
        "trend_sma": 200,
        "exit_sma": 5,
        "stop_loss_pct": 0.03
      },
      "documented_performance": {
        "source": "Larry Connors - High Probability ETF Trading",
        "sharpe_ratio": 1.18,
        "win_rate": 0.75,
        "annual_return": 0.30,
        "max_drawdown": 0.35,
        "avg_holding_period_days": 4
      },
      "validation_status": "backtested",
      "implementation_file": "strategies/rsi2_mean_reversion.py",
      "notes": "Works best on liquid ETFs (SPY, QQQ). NOT for intraday use. Requires trend filter to avoid catching falling knives.",
      "risk_level": "medium"
    },
